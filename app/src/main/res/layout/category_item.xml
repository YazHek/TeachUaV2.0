<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    card_view:cardBackgroundColor="?colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="20dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/categoryBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:innerRadius="10dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            card_view:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/categoryLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Title"
            android:textColor="?colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/categoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?colorOnSurface"
            android:layout_marginTop="110dp"
            android:text="This Would be a description of Club" />

        <TextView
            android:id="@+id/search_go_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Переглянути"
            android:textColor="?colorOnSurface"
            android:layout_marginTop="178dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="19sp"
            android:layout_alignEnd="@id/search_go_btn"
            android:layout_marginTop="178dp"
            android:layout_marginEnd="-27dp"
            android:backgroundTint="@color/blue"
            android:outlineAmbientShadowColor="@color/blue"
            android:outlineSpotShadowColor="@color/blue"
            android:background="@drawable/ic_arrow" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>