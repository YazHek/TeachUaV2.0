<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeachUaV20" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_orange</item>
        <item name="colorPrimaryVariant">@color/toolbar_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Secondary brand color. -->

<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/toolbar_orange</item>-->
<!--        <item name="colorSecondary">@color/blue_600</item>-->
<!--        <item name="colorSecondaryVariant">@color/blue_600</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorBackgroundFloating">@color/gray_200</item>
        <item name="android:colorBackground">@color/gray_200</item>
        <item name="colorOnBackground">@color/gray_900</item>
        <item name="colorSurface">@color/orange_100 </item>
        <item name="colorOnSurface">@color/gray_900</item>
    </style>

    <style name="Theme.TeachUaV20.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_font</item>
        <item name="colorControlActivated">@color/duskyYellow</item>
    </style>


    <style name="Theme.TeachUaV20.Button">
        <item name="android:background">@color/toolbar_orange</item>
    </style>

    <style name="ThemeOverlay.MyApp.NavigationView" parent="ThemeOverlay.AppCompat.Light">
        <!-- This is the menu item text color. -->
        <item name="android:textColorPrimary">@color/gray_900</item>
        <!-- This is the menu header text color. -->
        <item name="android:textColorSecondary">@color/gray_900</item>
        <!-- This is the selected color. -->
        <item name="colorPrimary">@color/toolbar_orange</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

    </style>



    <style name="Theme.TeachUaV20.PopupOverlay" parent="Theme.AppCompat.NoActionBar" />

    <style name="Theme.TeachUaV20.AppBarOverlay" parent="Theme.AppCompat.NoActionBar" >
        <!-- This is the menu item text color. -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- This is the menu header text color. -->
        <item name="android:textColorSecondary">@color/white</item>
        <!-- This is the selected color. -->
        <item name="colorPrimary">@color/toolbar_orange</item>
    </style>
</resources>